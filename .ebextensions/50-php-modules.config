commands:
  remove_mysql55:
    /usr/bin/yum -y remove 'mysql55*'    

packages:
  yum:
    libmcrypt-devel: []
    libmcrypt: []
    libmemcached-devel: []
    libmemcached: []
    mysql57-devel: []
    mysql57-libs: []
    mysql57: []
    php73-gd: []
    php73-imap: []
    php73-json: []
    php73-pdo: []

commands:
  pecl_mcrypt:
    command: printf '\n' | pecl7 install mcrypt
    test: "php -r \"exit(extension_loaded('mcrypt') ? 1 : 0);\""
  pecl_memcached:
    command: printf '\n\n\n\n\n\n\n\n\n' | pecl7 install memcached
    test: "php -r \"exit(extension_loaded('memcached') ? 1 : 0);\""
